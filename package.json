{
  "name": "pje-automation-peritos-servidores",
  "version": "1.0.0",
  "description": "Sistema de automação para vinculação de peritos e servidores no PJE",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "dev": "electron src/main.js --dev",
    "test": "jest",
    "test:unit": "jest src/tests/unit",
    "test:integration": "jest src/tests/integration",
    "test:e2e": "jest src/tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "build": "electron-builder",
    "build:dev": "electron-builder --dir",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "dist": "npm run build:all",
    "pack": "electron-builder --dir",
    "syntax-check": "node -c src/main.js && echo 'Main syntax OK' && node -c src/main/servidor-automation-v2.js && echo 'All syntax checks passed'",
    "create-shortcut": "node create-shortcut.js",
    "setup": "npm install && npm run create-shortcut",
    "prepare-icons": "echo 'Icons ready - using existing SVG for cross-platform builds'",
    "clean": "rimraf dist/ && echo 'Build directory cleaned'",
    "rebuild": "npm run clean && npm run build"
  },
  "dependencies": {
    "electron": "^27.0.0",
    "playwright": "^1.40.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "crypto": "^1.0.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "@jest/globals": "^29.7.0",
    "spectron": "^19.0.0",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.pje.perito.automation",
    "productName": "PJE Perito Automation",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "data/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/pje-icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "publisherName": "PJE Automation Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PJE Perito Automation",
      "include": "installer.nsh",
      "installerIcon": "assets/pje-icon.ico",
      "uninstallerIcon": "assets/pje-icon.ico",
      "installerHeaderIcon": "assets/pje-icon.ico",
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": false,
      "language": "1046"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/pje-icon.icns",
      "category": "public.app-category.productivity",
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/pje-icon.png",
      "category": "Office",
      "description": "Sistema de automação para vinculação de peritos e servidores no PJE",
      "desktop": {
        "Name": "PJE Perito Automation",
        "Comment": "Automação PJE para Peritos e Servidores",
        "Keywords": "PJE;Automation;Legal;Court;Brasil;"
      }
    },
    "publish": null,
    "compression": "normal",
    "extraMetadata": {
      "main": "src/main.js"
    }
  }
}